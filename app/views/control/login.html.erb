            <%= token_tag nil %>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="userName">Email: </label>
                    <input type="email" required name="email" class="form-control" id="email" placeholder="Ingrese email: admin@admin.com" />
                </div>

                <div class="form-group col-sm-6">
                    <label for="password">Contrase침a: </label>
